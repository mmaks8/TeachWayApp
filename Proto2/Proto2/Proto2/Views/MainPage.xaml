<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proto2.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout VerticalOptions="StartAndExpand">
        <Entry Placeholder="Username" />
        <Entry Placeholder="Password" IsPassword="true" />
        <Button Text="Log in" VerticalOptions="CenterAndExpand" Command="{Binding NavigateToHomePageCommand}"/>
        <Button Text="Sign up" VerticalOptions="CenterAndExpand" Command="{Binding NavigateToSignUpCommand}"/>
    </StackLayout>

</ContentPage>