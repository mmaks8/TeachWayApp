//CREATE DATABASE

CREATE DATABASE TeacherWay;
USE TeacherWay;

//CREATE TABLES

CREATE TABLE USER 
( 
ACCOUNT INT(100) NOT NULL 
AUTO_INCREMENT,
FIRSTNAME VARCHAR(250),
LASTNAME VARCHAR(250),
USERNAME VARCHAR(250) NOT NULL,
EMAIL VARCHAR(250) NOT NULL,
PASSWORD VARCHAR(250) NOT NULL , 
ISUNDER INT,ISPOST INT,
PRIMARY KEY (`ACCOUNT`), 
UNIQUE `UNIQUE_EMAIL` (`Email`)
 );

CREATE TABLE CATEGORY 
( 
ID INT(100) NOT NULL 
AUTO_INCREMENT, 
TITLE VARCHAR(250) NOT NULL ,
ISPOST INT,
ISUNDER INT, 
PRIMARY KEY (ID)
);

 CREATE TABLE REQUIREMENTS 
 ( 
ID INT(100) NOT NULL 
AUTO_INCREMENT, 
TITLE VARCHAR(250) NOT NULL,	
DESCRIPTION VARCHAR(500) , 
CATEGORY INT(10) NOT NULL , 
PRIMARY KEY (ID),
FOREIGN KEY (CATEGORY)
REFERENCES CATEGORY(ID)
ON DELETE CASCADE
 );

 CREATE TABLE CHECKOFFLIST
 (
ACCOUNT int(100) NOT NULL,
ID int(100) NOT NULL,
FOREIGN KEY(ACCOUNT)
REFERENCES USER(ACCOUNT),
FOREIGN KEY(ID)
REFERENCES REQUIREMENTS(ID)
) ;
